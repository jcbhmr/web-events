    "test": "tsc --noEmit && tsx --test test/**.test.ts"
  },
  "devDependencies": {
    "@types/node": "^20.2.1",
    "prettier": "^2.8.8",
    "prettier-plugin-jsdoc": "^0.4.2",
    "prettier-plugin-packagejson": "^2.4.3",
    "tsx": "^3.12.7",
    "typedoc": "^0.24.7",
    "typescript": "^5.0.4"
